<?xml version="1.0" encoding="UTF-8"?>

<?import com.engineal.scandatehelper.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.engineal.scandatehelper.ScanDateHelperController">
    <top>
        <MenuBar>
            <Menu text="%menu.file">
                <MenuItem onAction="#onFileMenuReset" text="%menu.file.reset" />
                <SeparatorMenuItem />
                <MenuItem onAction="#onFileMenuExit" text="%menu.file.exit" />
            </Menu>
            <Menu text="%menu.help">
                <MenuItem text="%menu.help.about" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox>
            <GridPane hgap="10.0" vgap="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

                <RadioButton fx:id="simpleRadioButton" mnemonicParsing="false" selected="true" text="%tab.simple.text" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <toggleGroup>
                        <ToggleGroup fx:id="tabGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="advancedRadioButton" mnemonicParsing="false" text="%tab.advanced.text" toggleGroup="$tabGroup" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="%label.date.text" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="%label.year.text" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="yearTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="%label.month.text" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ChoiceBox fx:id="monthChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="%label.day.text" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="dayTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="%label.directory.text" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Hyperlink fx:id="directoryText" onAction="#onDirectoryAction" text="%hyperlink.directory.nothing" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <CheckBox fx:id="scanCheckBox" mnemonicParsing="false" onAction="#onScanChecked" text="%checkbox.scan.text" GridPane.columnSpan="2" GridPane.rowIndex="6" />
            </GridPane>
            <Separator />
            <TableView fx:id="imageLog" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn editable="false" sortable="false" style="-fx-alignment: CENTER;">
                        <cellFactory>
                            <ImageCellFactory />
                        </cellFactory>
                        <cellValueFactory>
                            <PropertyValueFactory property="path" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="200.0" sortable="false" style="-fx-alignment: CENTER_LEFT;" text="Name">
                        <cellFactory>
                            <NameCellFactory />
                        </cellFactory>
                        <cellValueFactory>
                            <PropertyValueFactory property="path" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100" sortable="false" style="-fx-alignment: CENTER_LEFT;" text="Original Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="originalDate" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100" sortable="false" style="-fx-alignment: CENTER_LEFT;" text="New Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="newDate" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="30.0" style="-fx-alignment: CENTER;">
                        <cellFactory>
                            <StatusCellFactory />
                        </cellFactory>
                        <cellValueFactory>
                            <PropertyValueFactory property="status" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Label" />
        </HBox>
    </bottom>
</BorderPane>
